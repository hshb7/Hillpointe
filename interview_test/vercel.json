{
  "installCommand": "cd pms-backend && npm install && cd ../pms-frontend && npm install",
  "buildCommand": "cd pms-frontend && npm run build",
  "outputDirectory": "pms-frontend/dist",
  "rewrites": [
    { "source": "/api/v1/:path*", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
